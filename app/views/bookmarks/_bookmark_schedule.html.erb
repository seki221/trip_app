<div class="p-3 mb-2 rounded bg-success-subtle">
  <div class="d-flex">

    <p class="m-0">工程: 
    <%= link_to bookmark.bookmarkable.destination, planner_schedules_path(bookmark.bookmarkable.planner, bookmark.bookmarkable) %>(<%= bookmark.bookmarkable.planner.title %>)
    </p>

    <div class="d-flex ms-auto">
      <p class="m-0"></p>
      <%= form_with url: create_schedule_bookmark_path(bookmark), method: :post, local: true do |f| %>
        <%= select_tag :planner_id, options_for_select(current_user.planners.pluck(:title, :id)) %>
        <%= f.submit "プランに追加", class: "btn btn-sm btn-outline-primary ms-2" %>
      <% end %>
    </div>
  </div>
</div>
