<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>※ パスワードは<%= @minimum_password_length %>文字以上である必要があります</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id: "passwordInput" %>
    <button type="button" id="showPasswordButton">表示</button>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "passwordConfirmationInput" %>
    <button type="button" id="showPasswordConfirmationButton">表示</button>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
